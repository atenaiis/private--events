<div class="card">
  <div class="card-header">
   <h3> Upcoming Events</h3>
  </div>
  <div class="card-body p-0">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Title</th>
        <th>Date</th>
        <th>Location</th>
        <th>Description</th>
        <th>Creator</th>
        <th colspan="2"></th>
      </tr>
    </thead>

    <tbody>
    
      <% @events.upcoming.each do |event| %>
        <tr>
          <td><%= event.title %></td>
          <td><%= event.date %></td>
          <td><%= event.local %></td>
          <td><%= event.description %></td>
          <td><%= event.creator.name %></td>
          <td><%= link_to 'Show', event %></td>
          <td><%= link_to "Attend", event_attendances_path(event.id), method: :post, class: "#{display_attendee(event)}"%></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  </div>
</div>

<hr>

<div class="card">
  <div class="card-header">
<h3>Past Events</h3>
  </div>
  <div class="card-body p-0">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Title</th>
        <th>Date</th>
        <th>Location</th>
        <th>Description</th>
        <th>Creator</th>
        <th colspan="2"></th>
      </tr>
    </thead>

    <tbody>
    
      <% @events.previous.each do |event| %>
        <tr>
          <td><%= event.title %></td>
          <td><%= event.date %></td>
          <td><%= event.local %></td>
          <td><%= event.description %></td>
           <td><%= event.creator.name %></td>
          <td><%= link_to 'Show', event %></td>
          <td></td>
          
        </tr>
      <% end %>
    </tbody>
  </table>
  </div>
</div>
